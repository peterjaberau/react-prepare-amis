{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["es2020", "DOM", "DOM.Iterable", "ES6", "ES2015", "ES2021"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,


//    "emitDecoratorMetadata": true,
//    "downlevelIteration": true,
//    "composite": true,
//    "allowJs": true,
//


    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@scenes/*": ["src/packages/grafana/scenes/*"],
      "@schema/*": ["src/packages/grafana/schema/*"],
      "@data/*": ["src/packages/grafana/data/*"],
      "@runtime/*": ["src/packages/grafana/runtime/*"],
      "@grafana-module/*": ["src/apps/modules/grafana/*"],
      "@grafana-sql/*": ["src/packages/grafana/sql/*"],
      "@saga-icons/*": ["src/packages/grafana/saga-icons/*"],
      "@flamegraph/*": ["src/packages/grafana/flamegraph/*"],
      "@prometheus/*": ["src/packages/grafana/prometheus/*"],
      "@o11y-ds-frontend/*": ["src/packages/grafana/o11y-ds-frontend/*"],
      "@scenes-react/*": ["src/packages/grafana/scenes-react/*"],
      "@selectors/*": ["src/packages/grafana/selectors/*"],
      "@grafana-ui/*": ["src/packages/grafana/grafana-ui/*"],
      "@plugin-configs/*": ["src/packages/grafana/plugin-configs/*"],

//      plugin-configs
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "global.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
