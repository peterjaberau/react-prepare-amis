{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["es2020", "DOM", "DOM.Iterable", "ES6", "ES2015", "ES2021", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,


//    "emitDecoratorMetadata": true,
//    "downlevelIteration": true,
//    "composite": true,
//    "allowJs": true,
//


    "baseUrl": ".",
    "paths": {
//      "@/*": ["src/*"],
      "@scenes/*": ["app/packages/grafana/scenes/*"],
      "@schema/*": ["app/packages/grafana/schema/*"],
      "@data/*": ["app/packages/grafana/data/*"],
      "@runtime/*": ["app/packages/grafana/runtime/*"],
      "@grafana-module/*": ["app/apps/modules/grafana/*"],
      "@grafana-sql/*": ["app/packages/grafana/sql/*"],
      "@saga-icons/*": ["app/packages/grafana/saga-icons/*"],
      "@flamegraph/*": ["app/packages/grafana/flamegraph/*"],
      "@prometheus/*": ["app/packages/grafana/prometheus/*"],
      "@o11y-ds-frontend/*": ["app/packages/grafana/o11y-ds-frontend/*"],
      "@scenes-react/*": ["app/packages/grafana/scenes-react/*"],
      "@selectors/*": ["app/packages/grafana/selectors/*"],
      "@grafana-ui/*": ["app/packages/grafana/grafana-ui/*"],
      "@plugin-configs/*": ["app/packages/grafana/plugin-configs/*"],
      "@utils/*": ["app/utils/*"],
      "@plugin-ui/*": ["app/packages/grafana/plugin-ui/*"],
      "~/*": ["./app/*"]

//      plugin-configs
    },
//    "rootDirs": [".", "./.react-router/types"],
    "allowSyntheticDefaultImports": true,


    "types": [
      "@types/node",
      "@remix-run/node",
      "vite/client",
      "styled-components",
      "@types/wicg-file-system-access",
      "node"
    ],


    "allowJs": true
  },
  "include": [
    "app",
    "global.d.ts",
    "declarations.d.ts",
    "app/assets.d.ts",
    "icons.d.ts",
    "env.d.ts",

    "**/*.ts",
    "**/*.tsx",
    "**/*.ts",
    "**/*.tsx",

//    "**/.client/**/*.ts",
//    "**/.client/**/*.tsx",

    "app/**/*.ts",
    "app/**/*.tsx",
    "./app/types/**/*.ts",

//    "**/.server/**/*.ts",
//    "**/.server/**/*.tsx",
//
//    "server/index.js",

//    ".react-router/types/**/*",
//    ".react-router/types/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
